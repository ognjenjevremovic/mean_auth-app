{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "pretty": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ]
    },
    "exclude": [
        "node_modules/"
    ]
}
